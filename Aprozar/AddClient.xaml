<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aprozar.AddClient">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adaugati client" Clicked="OnClientAddedClicked" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="listView" Margin="50" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" RowHeight="100">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout >
                        <Label Text="{Binding ID}" />
                        <Label Text="{Binding Nume}" />
                        <Label Text="{Binding Prenume}" />
                        <Label Text="{Binding Email}" />
                        <Label Text="{Binding NumarTelefon}" />
                        <Label Text="{Binding Adresa}" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>